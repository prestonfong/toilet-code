# Kilo Code Web - Environment Configuration Template
# Copy this file to .env and update the values as needed

# =================================
# Server Configuration
# =================================

# Port for the web server (default: 5000)
PORT=5000

# Node environment (development, production, test)
NODE_ENV=production

# Host configuration (default: localhost for security)
HOST=localhost

# =================================
# Application Settings
# =================================

# Application name and version
APP_NAME=Kilo Code Web
APP_VERSION=1.0.0

# Maximum file upload size in MB
MAX_UPLOAD_SIZE=10

# Session secret for security (generate a random string)
SESSION_SECRET=your-super-secret-session-key-change-this

# =================================
# Workspace Configuration
# =================================

# Default workspace directory (relative to server root)
WORKSPACE_DIR=./workspace

# Maximum workspace size in MB
MAX_WORKSPACE_SIZE=1000

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.js,.ts,.jsx,.tsx,.html,.css,.scss,.json,.md,.txt,.py,.java,.cpp,.c,.h,.yml,.yaml,.xml,.sql

# =================================
# AI Provider Configuration
# =================================

# Default AI provider (anthropic, openai, local, etc.)
DEFAULT_AI_PROVIDER=anthropic

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# =================================
# Security Settings
# =================================

# Enable CORS (true/false)
ENABLE_CORS=true

# Allowed CORS origins (comma-separated, * for all)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT settings (for future authentication)
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRE_TIME=24h

# =================================
# Logging Configuration
# =================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/kilo-web.log

# Enable console logging (true/false)
LOG_CONSOLE=true

# Maximum log file size in MB
LOG_MAX_SIZE=10

# Number of backup log files to keep
LOG_MAX_FILES=5

# =================================
# Database Configuration (Future)
# =================================

# Database type (sqlite, postgresql, mysql)
DB_TYPE=sqlite

# SQLite database file path
DB_SQLITE_PATH=./data/kilo-web.db

# PostgreSQL configuration
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_DATABASE=kilocode
DB_POSTGRES_USERNAME=kilocode
DB_POSTGRES_PASSWORD=your-postgres-password

# =================================
# WebSocket Configuration
# =================================

# WebSocket path
WS_PATH=/ws

# WebSocket heartbeat interval in milliseconds
WS_HEARTBEAT_INTERVAL=30000

# Maximum WebSocket connections per IP
WS_MAX_CONNECTIONS_PER_IP=5

# =================================
# Development Settings
# =================================

# Enable development features (true/false)
DEVELOPMENT_MODE=false

# Enable hot reload (true/false)
HOT_RELOAD=false

# Enable debug mode (true/false)
DEBUG_MODE=false

# Mock AI responses (true/false) - for development/testing
MOCK_AI_RESPONSES=false

# =================================
# Performance Settings
# =================================

# Node.js memory limit in MB
NODE_MEMORY_LIMIT=2048

# Enable clustering (true/false)
ENABLE_CLUSTERING=false

# Number of worker processes (0 = auto-detect based on CPU cores)
CLUSTER_WORKERS=0

# =================================
# Storage Configuration
# =================================

# Storage provider (local, s3, gcs)
STORAGE_PROVIDER=local

# Local storage path
STORAGE_LOCAL_PATH=./storage

# AWS S3 configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =================================
# Monitoring and Analytics
# =================================

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Metrics endpoint path
METRICS_PATH=/metrics

# Enable usage analytics (true/false)
ENABLE_ANALYTICS=false

# Analytics provider (none, google, custom)
ANALYTICS_PROVIDER=none

# Google Analytics tracking ID
GA_TRACKING_ID=GA-XXXXXXXXX-X

# =================================
# Email Configuration (Future)
# =================================

# SMTP configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# =================================
# Backup Configuration (Future)
# =================================

# Enable automatic backups (true/false)
ENABLE_BACKUPS=false

# Backup interval in hours
BACKUP_INTERVAL=24

# Backup retention in days
BACKUP_RETENTION=30

# Backup storage path
BACKUP_PATH=./backups

# =================================
# Plugin Configuration (Future)
# =================================

# Enable plugin system (true/false)
ENABLE_PLUGINS=false

# Plugin directory
PLUGIN_DIR=./plugins

# Allowed plugin sources (comma-separated)
PLUGIN_SOURCES=official,community

# =================================
# Custom Configuration
# =================================

# Add your custom environment variables below
# CUSTOM_SETTING=value