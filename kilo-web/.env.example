# Push Notification Configuration
# Copy this file to .env and fill in your values

# VAPID Email (required for VAPID key generation)
# This should be a valid email address or a mailto: URL
VAPID_EMAIL=your-email@example.com

# Push Notification Settings (optional - defaults will be used if not specified)
PUSH_NOTIFICATION_TTL=86400
PUSH_NOTIFICATION_URGENCY=normal

# File Paths (optional - defaults will be used if not specified)
VAPID_KEYS_FILE=./data/vapid-keys.json
PUSH_SUBSCRIPTIONS_FILE=./data/push-subscriptions.json
PUSH_LOG_FILE=./logs/push-notifications.log

# Logging Configuration (optional)
PUSH_LOG_LEVEL=info
PUSH_LOG_MAX_SIZE=10485760
PUSH_LOG_MAX_FILES=5

# Development/Testing Settings
NODE_ENV=development